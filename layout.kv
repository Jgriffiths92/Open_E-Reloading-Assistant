#:import MDNavigationLayout kivymd.uix.navigationdrawer.MDNavigationLayout
#:import MDNavigationDrawer kivymd.uix.navigationdrawer.MDNavigationDrawer
#:import MDNavigationDrawerMenu kivymd.uix.navigationdrawer.MDNavigationDrawerMenu
#:import MDNavigationDrawerItem kivymd.uix.navigationdrawer.MDNavigationDrawerItem
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDTopAppBar kivymd.uix.toolbar.MDTopAppBar
#:import MDTextField kivymd.uix.textfield.MDTextField

MDNavigationLayout:
    ScreenManager:
        id: screen_manager
        HomeScreen:
            id: home_screen
            name: "home"
        SavedCartridgesScreen:
            id: saved_cartridges_screen
            name: "saved_cartridges"
        ManageDataScreen:
            id: manage_data_screen
            name: "manage_data"
        SettingsScreen:
            id: settings_screen
            name: "settings"

    MDNavigationDrawer:
        id: drawer
        MDNavigationDrawerMenu:
            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: "180dp"
                padding: "10dp"

                Image:
                    source: "assets/images/logo.png"
                    size_hint: None, None
                    size: "80dp", "80dp"
                    pos_hint: {"center_x": 0.5}

                MDLabel:
                    text: "Open E-Reloading\nAssistant"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    halign: "center"

            MDNavigationDrawerItem:
                text: "Home"
                icon: "home"
                on_release:
                    screen_manager.current = "home"
                    app.root.ids.drawer.set_state("close")

            MDNavigationDrawerItem:
                text: "Saved Cartridges"
                icon: "content-save"
                on_release:
                    screen_manager.current = "saved_cartridges"
                    app.root.ids.drawer.set_state("close")

            MDNavigationDrawerItem:
                text: "Manage Data"
                icon: "wrench"
                on_release:
                    screen_manager.current = "manage_data"
                    app.root.ids.drawer.set_state("close")

<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Home"
            left_action_items: [["menu", lambda x: app.root.ids.drawer.set_state("open")]]
            right_action_items: [["dots-vertical", lambda x: app.on_dots_press(x)]]
            md_bg_color: 0.678, 0.0, 0.969, 1

        MDTextField:
            id: cartridge_name_field
            hint_text: "Cartridge Name"
            hint_text_mode: "on_focus"
            multiline: False
            halign: "center"
            size_hint_y: None
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_text_validate: app.on_cartridge_name_entered(self.text)
        ScrollView:
            size_hint_y: 1
            do_scroll_x: False
            do_scroll_y: True
            BoxLayout:
                id: table_container
                orientation: "vertical"
                size_hint: 1, 1
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, None
            height: dp(100)
            padding: "10dp"

            MDTextField:
                id: cartridge_notes_field
                hint_text: "Cartridge Notes"
                hint_text_mode: "on_focus"
                multiline: True
                halign: "center"
                size_hint_y: None
                height: dp(96)
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
                on_text: app.limit_cartridge_notes(self)
                on_text_validate: app.on_cartridge_notes_entered(self.text)

            AnchorLayout:
                anchor_x: "right"
                anchor_y: "bottom"
                size_hint: 1, None
                height: dp(64)
                padding: [0, 0, "40dp", "20dp"]

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: None, None
                    height: dp(64)
                    width: dp(150)
                    spacing: "10dp"

                    MDFloatingActionButton:
                        id: nfc_button
                        icon: "nfc"
                        md_bg_color: 0.0, 0.5, 0.8, 1
                        size_hint: None, None
                        size: dp(56), dp(56)
                        on_release: app.on_nfc_button_press()

                    MDFloatingActionButton:
                        icon: "content-save"
                        md_bg_color: 0.0, 0.969, 0.565, 1
                        size_hint: None, None
                        size: dp(56), dp(56)
                        on_release: app.on_fab_press()

                    MDFloatingActionButton:
                        icon: "broom"
                        size_hint: (None, None)
                        size: dp(56), dp(56)
                        md_bg_color: 0.91, 0.74, 0.09, 1
                        on_release: app.clear_table_data()

<SavedCartridgesScreen>:
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Saved Cartridges"
            left_action_items: [["menu", lambda x: app.root.ids.drawer.set_state("open")]]
            right_action_items: [["sort", lambda x: root.open_sort_menu(x)], ["dots-vertical", lambda x: app.on_dots_press(x)]]
            md_bg_color: 0.678, 0.0, 0.969, 1
        MDTextField:
            id: search_field
            hint_text: "Search Cartridges"
            hint_text_mode: "on_focus"
            multiline: False
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_text: app.on_search_entered(self.text)
        ScrollView:
            size_hint_y: 1
            MDList:
                id: swipe_file_list

<ManageDataScreen>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height

            MDTopAppBar:
                title: "Manage Data"
                left_action_items: [["menu", lambda x: app.root.ids.drawer.set_state("open")]]
                right_action_items: [["dots-vertical", lambda x: app.on_dots_press(x)]]
                md_bg_color: 0.678, 0.0, 0.969, 1
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp" 
                spacing: "10dp"
                pos_hint: {"center_x": 0.5}

                Widget:
                    size_hint_y: None
                    height: dp(16)  # Adjust this value for more/less gap
                MDLabel:
                    text: "Delete Saved Cartridges After"
                    halign: "center"
                MDFlatButton:
                    id: delete_option_button
                    text: app.delete_option_label
                    pos_hint: {"center_x": 0.5}
                    size_hint_y: None
                    height: dp(32)
                    on_release: root.open_delete_option_menu(self)
                MDLabel:
                    text: "Delete All Saved Cartridge Files"
                    halign: "center"
                Widget:
                    size_hint_y: None
                    height: dp(10)  # Adjust this value for more/less gap
                MDRaisedButton:
                    text: "Delete ALL Cartridge Files"
                    pos_hint: {"center_x": 0.5}
                    size_hint_y: None
                    height: dp(32)
                    md_bg_color: 1, 0, 0, 1  # Red background for warning
                    text_color: 1, 1, 1, 1
                    on_release: root.delete_all_csv_files()

<SettingsScreen>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height

            MDTopAppBar:
                title: "Settings"
                left_action_items: [["arrow-left", lambda x: app.navigate_to_home()]]
                right_action_items: [["dots-vertical", lambda x: app.on_dots_press(x)]]
                md_bg_color: 0.678, 0.0, 0.969, 1
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.8
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp"
                spacing: "10dp"
                pos_hint: {"center_x": 0.5}

                Widget:
                    size_hint_y: None
                    height: dp(16)  # Adjust this value for more/less gap

                MDLabel:
                    text: "Select Display Size:"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1] + dp(4)

                MDFlatButton:
                    id: display_dropdown_button
                    text: "Select Display"
                    pos_hint: {"center_x": 0.5}
                    size_hint_y: None
                    height: dp(32)
                    on_release: app.open_display_dropdown(self)

                MDLabel:
                    text: "Select Orientation:"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1] + dp(4)

                MDFlatButton:
                    id: orientation_dropdown_button
                    text: "Select Orientation"
                    pos_hint: {"center_x": 0.5}
                    size_hint_y: None
                    height: dp(32)
                    on_release: app.open_orientation_dropdown(self)

<SwipeFileItem@MDCardSwipe>:
    radius: [0, 0, 0, 0]
    file_path: ""
    icon: "folder"
    file_size: ""
    size_hint_y: None
    height: "56dp"
    MDCardSwipeLayerBox:
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MDIconButton:
            icon: "delete"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            on_release: app.delete_file_or_folder(root.file_path)
    MDCardSwipeFrontBox:
        MDCard:
            radius: [0, 0, 0, 0]
            elevation: 0
            style: "filled"
            size_hint: 1, 1
            OneLineAvatarIconListItem:
                text: root.display_name if hasattr(root, "display_name") and root.display_name else (app.get_basename(root.file_path)[:-4] if app.get_basename(root.file_path).lower().endswith('.csv') else app.get_basename(root.file_path))
                text_color: 0, 0, 0, 1
                on_release:
                    app.populate_swipe_file_list(root.file_path) if hasattr(root, "display_name") and root.display_name == "Back" else app.on_file_selected([root.file_path])
                IconLeftWidget:
                    icon: root.icon if root.icon == "arrow-left" else ""

<RightLabel@Label>:
    color: 0, 0, 0, 1
    size_hint_x: None
    width: "60dp"
    halign: "right"
    valign: "middle"
    text_size: self.size
